generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  collaborator
}

enum DayStatusType {
  open
  closed_complete
  closed_incomplete
}

enum ReminderType {
  soft
  hard
  weekly
}

enum ReminderChannel {
  slack
  email
}

enum ReminderChannelPreference {
  slack_only
  slack_email
  email_only
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String   @map("password_hash")
  name          String
  role          UserRole @default(collaborator)

  // Profilo orario
  workingDays        Int[]    @default([1, 2, 3, 4, 5]) @map("working_days")
  workStartTime      String   @default("09:00") @map("work_start_time")
  workEndTime        String   @default("18:00") @map("work_end_time")
  dailyTargetMinutes Int      @default(480) @map("daily_target_minutes")

  // Canali comunicazione
  slackUserId     String?                   @map("slack_user_id")
  reminderChannel ReminderChannelPreference @default(slack_only) @map("reminder_channel")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relazioni
  projectAssignments ProjectAssignment[]
  timeEntries        TimeEntry[]
  dayStatuses        DayStatus[]
  weeklySubmissions  WeeklySubmission[]
  reminderLogs       ReminderLog[]

  @@map("users")
}

model Project {
  id        String   @id @default(uuid())
  name      String
  code      String?  @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")

  // Relazioni
  assignments ProjectAssignment[]
  timeEntries TimeEntry[]

  @@map("projects")
}

model ProjectAssignment {
  id        String   @id @default(uuid())
  projectId String   @map("project_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("project_assignments")
}

model TimeEntry {
  id              String   @id @default(uuid())
  userId          String   @map("user_id")
  projectId       String   @map("project_id")
  date            DateTime @db.Date
  durationMinutes Int      @map("duration_minutes")
  notes           String?
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@map("time_entries")
}

model DayStatus {
  id       String        @id @default(uuid())
  userId   String        @map("user_id")
  date     DateTime      @db.Date
  status   DayStatusType @default(open)
  closedAt DateTime?     @map("closed_at")
  createdAt DateTime     @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
  @@map("day_status")
}

model WeeklySubmission {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  weekStart   DateTime @map("week_start") @db.Date
  weekEnd     DateTime @map("week_end") @db.Date
  submittedAt DateTime @default(now()) @map("submitted_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStart])
  @@index([userId])
  @@map("weekly_submissions")
}

model ReminderLog {
  id           String          @id @default(uuid())
  userId       String          @map("user_id")
  reminderType ReminderType    @map("reminder_type")
  channel      ReminderChannel
  sentAt       DateTime        @default(now()) @map("sent_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("reminder_logs")
}
